#include<iostream>
using namespace std;
int main(){
    int row,column;
    for(row=1;row<=13;row++)
    {
        if (row<=7){
            for(column=row-1;column>=1;column--){
                cout<<" ";
            }
            for(column=row;column<=7;column++){
                cout<<column<<" ";
            }
            cout<<endl;
        }
        else{
            for(column=13-row;column>=1;column--){
                cout<<" ";
            }
                for(column=14-row;column<=7;column++){
                    cout<<column<<" ";
            }
            cout<<endl;
        }
    }
    return 0;
}
